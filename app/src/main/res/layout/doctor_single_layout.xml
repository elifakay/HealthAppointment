<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingStart="10dp"
    android:paddingTop="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <Button
                android:id="@+id/btnSingleAppointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"
                android:backgroundTint="#c74145"
                android:text="Randevu Al"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imgDoctorSingleImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/doktor_profile" />

            <TextView
                android:id="@+id/txtDoctorSingleNameSurname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/imgDoctorSingleImage"
                android:layout_marginStart="124dp"
                android:layout_weight="1"
                android:text="Ad Soyad"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtDoctorSingleDepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtDoctorSingleNameSurname"
                android:layout_below="@+id/txtDoctorSingleNameSurname"
                android:layout_weight="1"
                android:paddingEnd="10dp"
                android:text="Alanı"
                android:textAlignment="textEnd"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtDoctorSingleExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtDoctorSingleNameSurname"
                android:layout_below="@+id/txtDoctorSingleDepartment"
                android:layout_weight="1"
                android:paddingEnd="10dp"
                android:text="Deneyim"
                android:textAlignment="textEnd"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtDoctorSingleGsm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgDoctorSingleImage"
                android:layout_alignStart="@+id/txtDoctorSingleNameSurname"
                android:layout_weight="1"
                android:paddingEnd="10dp"
                android:text="Gsm"
                android:textAlignment="textEnd"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtDoctorSingleCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtDoctorSingleNameSurname"
                android:layout_below="@+id/txtDoctorSingleExperience"
                android:layout_weight="1"
                android:paddingEnd="10dp"
                android:text="Şehir"
                android:textAlignment="textEnd"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <ProgressBar
                android:id="@+id/progressBarImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtDoctorSingleNameSurname"
                android:layout_marginStart="37dp"
                android:visibility="invisible" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>